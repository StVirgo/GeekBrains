
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="com.geekbrains.chat.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <HBox fx:id="loginPanel" >
        <Button text="Подключиться" onAction="#showLogWindow" minWidth="100" />
        <Button text="Зарегистрироваться" onAction="#showRegWindow" minWidth="100"/>
        <Button text="Отключиться" onAction="#disconnect" prefWidth="100" maxWidth="100" minWidth="100" />
    </HBox>
    <HBox>
        <TextArea fx:id="msgArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true"/>
        <VBox>

            <ListView fx:id="clientList" prefWidth="100" maxWidth="100" minWidth="100" />
        </VBox>

    </HBox>


    <HBox fx:id="msgPanel" visible="true">
        <TextField fx:id="msgField" HBox.hgrow="ALWAYS" promptText="Введите сообщение..." onAction="#sendMsg"/>
        <Button text="Отправить" onAction="#sendMsg"/>
    </HBox>



</VBox>